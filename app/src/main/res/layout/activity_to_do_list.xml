<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToDoListActivity">

    <!-- Creating a TextView to show where the gold value is -->
    <TextView
        android:id="@+id/goldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="30dp"
        android:text="Gold: " />

    <!-- Creating a TextView to show the gold value -->
    <TextView
        android:id="@+id/goldValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="30dp"
        android:text=" xxx " />

    <!-- Creating a TextView to show where the health value is -->
    <TextView
        android:id="@+id/healthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="Health: " />

    <!-- Creating a TextView to show the health value -->
    <TextView
        android:id="@+id/healthValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:text=" xxx " />

    <!-- LinearLayout for all of the navigation buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:weightSum="4">

        <!-- Creating Button to access the daily page -->
        <Button
            android:id="@+id/dailiesPageButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="Dailies"/>

        <!-- Creating Button to access the to do list page -->
        <Button
            android:id="@+id/toDoListPageButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="To-Do"/>

        <!-- Creating Button to access the shop page -->
        <Button
            android:id="@+id/shopPageButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="Shop"/>

        <!-- Creating Button to access the combat page -->
        <Button
            android:id="@+id/combatPageButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="Combat"/>

    </LinearLayout>

    <!-- Creating Button to make a new task -->
    <Button
        android:id="@+id/newToDoTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Create new task" />

    <!-- Creating a TextView to show the current page is the to do list page -->
    <TextView
        android:id="@+id/ToDoTasksText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="To-Do List Page!"
        />

    <!-- Creating the ListView to contain all of the tasks the user has made -->
    <ListView
        android:id="@+id/toDoList"
        android:layout_marginTop="190dp"
        android:layout_width="400dp"
        android:layout_height="400dp" />

    <!-- Creating a EditText text box which allows the user to type in it -->
    <EditText
        android:id="@+id/toDoListEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter task"
        android:layout_marginTop="140dp"/>
    
</RelativeLayout>