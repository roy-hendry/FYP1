<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DailyTasksActivity">

    <!-- Creating a TextView to show where the gold value is -->
    <TextView
        android:id="@+id/goldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="30dp"
        android:text="Gold: " />

    <!-- Creating a TextView to show the gold value -->
    <TextView
        android:id="@+id/goldValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="30dp"
        android:text=" xxx " />

    <!-- Creating a TextView to show where the health value is -->
    <TextView
        android:id="@+id/healthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="Health: " />

    <!-- Creating a TextView to show the health value -->
    <TextView
        android:id="@+id/healthValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:text=" xxx " />

    <!-- Creating Button to access the daily page -->
    <Button
        android:id="@+id/dailiesPageButton"
        android:layout_width="100dp"
        android:layout_height="60dp"

        android:layout_alignParentBottom="true"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="40dp"
        android:textSize="14dp"
        android:text="Dailies" />

    <!-- Creating Button to access the to do list page -->
    <Button
        android:id="@+id/toDoListPageButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="102dp"
        android:layout_marginBottom="40dp"
        android:textSize="12dp"
        android:text="To Do List" />

    <!-- Creating Button to access the shop page -->
    <Button
        android:id="@+id/shopPageButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="202dp"
        android:layout_marginBottom="40dp"
        android:textSize="14dp"
        android:text="Shop" />

    <!-- Creating Button to access the combat page -->
    <Button
        android:id="@+id/combatPageButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="302dp"
        android:layout_marginBottom="40dp"
        android:textSize="12dp"
        android:text="Combat" />

    <!-- Creating Button to make a new daily task -->
    <Button
        android:id="@+id/newDailyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Create new daily task" />

    <!-- Creating Button to make a new daily task -->
    <Button
        android:id="@+id/cashIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:text="Before bed cash in" />

    <!-- Creating a TextView to show the current page is the daily task page -->
    <TextView
        android:id="@+id/DailyTasksText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Daily Tasks Page!"
        />

    <!-- Creating the ListView to contain all of the tasks the user has made -->
    <ListView
        android:id="@+id/taskList"
        android:layout_width="230dp"
        android:layout_height="396dp"
        android:layout_marginTop="190dp" />

    <!-- Creating a ListView to contain the state of each task the user has made -->
    <ListView
        android:id="@+id/taskListState"
        android:layout_width="250dp"
        android:layout_height="396dp"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="230dp" />

    <!-- Creating a EditText text box which allows the user to type in it -->
    <EditText
        android:id="@+id/taskEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter task"
        android:layout_marginTop="140dp"/>

</RelativeLayout>