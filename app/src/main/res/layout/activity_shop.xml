<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Creating a TextView to show where the gold value is -->
    <TextView
        android:id="@+id/goldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="30dp"
        android:text="Gold: " />

    <!-- Creating a TextView to show the gold value -->
    <TextView
        android:id="@+id/goldValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="30dp"
        android:text=" xxx " />

    <!-- Creating a TextView to show where the health value is -->
    <TextView
        android:id="@+id/healthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="Health: " />

    <!-- Creating a TextView to show the health value -->
    <TextView
        android:id="@+id/healthValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:text=" xxx " />

    <!-- Creating Button to access the daily page -->
    <Button
        android:id="@+id/dailiesPageButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="610dp"
        android:layout_marginBottom="20dp"
        android:textSize="14dp"
        android:text="Dailies" />

    <!-- Creating Button to access the to do list page -->
    <Button
        android:id="@+id/toDoListPageButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="610dp"
        android:layout_marginBottom="20dp"
        android:textSize="12dp"
        android:text="To Do List" />

    <!-- Creating Button to access the shop page -->
    <Button
        android:id="@+id/shopPageButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="202dp"
        android:layout_marginTop="610dp"
        android:layout_marginBottom="20dp"
        android:textSize="14dp"
        android:text="Shop" />

    <!-- Creating Button to access the combat page -->
    <Button
        android:id="@+id/combatPageButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="302dp"
        android:layout_marginTop="610dp"
        android:layout_marginBottom="20dp"
        android:textSize="12dp"
        android:text="Combat" />

    <!-- Creating a TextView to show the current page is the to do list page -->
    <TextView
        android:id="@+id/ShopText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Shop Page!"
        />

    <!-- Creating an ImageButton to show the potion icon and let the user buy it -->
    <ImageButton
        android:id="@+id/potionImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:background="@drawable/potion_image" />

    <!-- Creating a TextView to show the potion description -->
    <TextView
        android:id="@+id/potionCostText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="240dp"
        android:text="Health potion cost: 50g" />


    <!-- Creating a TextView to show the cost of the potion -->
    <TextView
        android:id="@+id/potionDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="260dp"
        android:text="Instantly heals the user by 25hp (health points) on purchase" />

    <!-- Creating an ImageButton to show the dagger icon and let the user buy it -->
    <ImageButton
        android:id="@+id/daggerImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:background="@drawable/dagger_image" />

    <!-- Creating a TextView to show the cost of the dagger -->
    <TextView
        android:id="@+id/daggerCostText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="440dp"
        android:text="Dagger cost: 100g" />

    <!-- Creating a TextView to show the description of the dagger -->
    <TextView
        android:id="@+id/daggerDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="460dp"
        android:text="Gives the user +5cb (combat power)" />

    <!-- Creating a TextView to show the user how to buy an item -->
    <TextView
        android:id="@+id/toolTipText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:text="Click on an item to buy and use it! " />

    <!-- Creating a TextView to show where the user's combat value is shown -->
    <TextView
        android:id="@+id/combatText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="530dp"
        android:text="Current Combat Value: " />

    <!-- Creating a TextView to show the user's combat value -->
    <TextView
        android:id="@+id/combatValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="550dp"
        android:text=" xxx " />

</RelativeLayout>